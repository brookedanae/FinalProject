@model FinalProject.Data.DatabaseModels.Concert

@{
    ViewData["Title"] = "Details";
}
<style>
    h1 {
        text-align: center;
    }
   /* div {
        text-align: center;
    }*/
    h4 {
        text-align: center;
    }
    row {
        text-align: center;
    }  
     hover {
        background-color: yellow;
    }
</style>

<h1>Details of your Concert</h1>

<div>
    <h4>Concert</h4>
    <hr />
    <dl class="row">
        @*<dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>*@
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        @*<dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Url)
        </dt>*@
        <dd class="col-sm-10">
            <img src="@Model.Url" height="225" width="305" />
        </dd>
        <dt class="col-sm-2 offset-2">
            @Html.DisplayNameFor(model => model.Date)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Date)
        </dd>
        <dt class="col-sm-2 offset-2">
            @Html.DisplayNameFor(model => model.Time)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Time)
        </dd>
        <dt class="col-sm-2 offset-2">
            @Html.DisplayNameFor(model => model.Venue)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Venue)
        </dd>
        <dt class="col-sm-2 offset-2">
            @Html.DisplayNameFor(model => model.Temperature)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Temperature)
            @if (@Model.Temperature == null)
            {
                <h6 style="font-weight: 400">Check back soon!</h6>
            }
        </dd>
        <dt class="col-sm-2 offset-2">
            @Html.DisplayNameFor(model => model.Forecast)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Forecast)
            @if (@Model.Forecast == null)
            {
                <h6 style="font-weight: 400">Check back soon!</h6>
            }
        </dd>
        <dt class="col-sm-2 offset-2">
            @Html.DisplayNameFor(model => model.City)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.City)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>
